<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2.0" client="site" method="upgrade">
    <name>B3 Carousel Module</name>
    <author>Hugo Fittipaldi</author>
    <creationDate>April 2016</creationDate>
    <copyright>Copyright (C) 2016 Hugo Fittipaldi. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>hugo.fittipaldi@gmail.com</authorEmail>
    <version>1.3.2</version>
    <description>Bootstrap 3 Carousel Module is a module for Joomla 3.2+ which displays a carousel of images.</description>
    <files>
        <filename>mod_b3_carousel.xml</filename>
        <filename module="mod_b3_carousel">mod_b3_carousel.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    <media destination="mod_b3_carousel" folder="media">
        <folder>css</folder>
        <file>index.html</file>
    </media>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="images"
                       type="repeatable"
                       icon="images"
                       description="PLG_TINY_FIELD_TEMPLATE_FIELD_ELEMENTS_DESC"
                       label="Carousel images"
                       maximum="10"
                       filter="raw"
                       default="{'ordering':'','main_image':'','background_image':'','title':'','link':'','target':'0','description':''}">
                    <fields name="params">
                        <fieldset hidden="true" name="images_modal" repeat="true">
                            <field name="ordering"
                                   type="integer"
                                   default="1"
                                   class="input-mini"
                                   first="1"
                                   last="10"
                                   step="1" />
                            <field name="main_image"
                                   type="media"
                                   preview="tooltip"
                                   directory="images"
                                   label="Main image"
                                   description="This is the main image for this slide" />
                            <field name="alternative_image"
                                   type="media"
                                   preview="tooltip"
                                   directory="images"
                                   label="Alternative image"
                                   description="Alternative image for small or extra small devices" />
                            <field name="title"
                                   type="text"
                                   default=""
                                   label="Image title"
                                   description="The title of the image" />
                            <field name="link"
                                   type="url"
                                   default=""
                                   label="Image link"
                                   description="The link of the image" />
                            <field name="target"
                                   type="radio"
                                   default="0"
                                   label="Image link target"
                                   description="Choose where the link points to">
                                <option value="0">Self</option>
                                <option value="1">Blank</option>
                            </field>
                            <field name="description"
                                   type="textarea"
                                   label="Image description"
                                   description="The description text for the image (html)" />
                        </fieldset>
                    </fields>
                </field>

                <field name="myspacer"
                       type="spacer"
                       hr="true" />

                <field name="autoslide"
                       type="radio"
                       class="btn-group btn-group-yesno radio"
                       default="1"
                       label="Auto slide"
                       description="If no, carousel will not automatically cycle.">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="transition"
                       type="list"
                       default="0"
                       label="Transition"
                       description="Image transition">
                    <option value="0">Default</option>
                    <option value="1">Fade</option>
                </field>
                <field name="interval"
                       type="text"
                       default="5000"
                       label="Interval"
                       description="The amount of time to delay between automatically cycling an item." />

                <field name="indicators"
                       type="radio"
                       class="btn-group btn-group-yesno radio"
                       default="1"
                       label="Indicators"
                       description="Turn on or off underside control blobs.">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="controls"
                       type="radio"
                       class="btn-group btn-group-yesno radio"
                       default="1"
                       label="Left/right controls"
                       description="Turn on or off left/right buttons.">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="pause"
                       type="radio"
                       class="btn-group btn-group-yesno radio"
                       default="1"
                       label="Pauses on mouseenter?"
                       description="Pauses the cycling of the carousel on mouseenter and resumes the cycling of the carousel on mouseleave.">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="wrap"
                       type="radio"
                       class="btn-group btn-group-yesno radio"
                       default="1"
                       label="Carousel loop"
                       description="Whether the carousel should cycle continuously or have hard stops.">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="keyboard"
                       type="radio"
                       class="btn-group btn-group-yesno radio"
                       default="1"
                       label="Keyboard control"
                       description="Whether the carousel should react to keyboard events.">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>

            <fieldset name="advanced">
                <field name="layout"
                       type="modulelayout"
                       label="JFIELD_ALT_LAYOUT_LABEL"
                       description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                <field name="moduleclass_sfx"
                       type="textarea" rows="3"
                       label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                       description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                <field name="cache"
                       type="list"
                       default="1"
                       label="COM_MODULES_FIELD_CACHING_LABEL"
                       description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field name="cache_time"
                       type="text"
                       default="900"
                       label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                       description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field name="cachemode"
                       type="hidden"
                       default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
